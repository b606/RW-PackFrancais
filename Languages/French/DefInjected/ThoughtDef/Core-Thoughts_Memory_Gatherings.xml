  <GotMarried.stages.got_married_to.description>Je me suis marié{PAWN_gender ? : e} ! C'est merveilleux de commencer une vie ensemble !</GotMarried.stages.got_married_to.description>
  
  <!-- EN: held concert -->
  <HeldConcert.stages.held_concert.label>organisé un concert</HeldConcert.stages.held_concert.label>
  <!-- EN: They loved me. They really loved me. -->
  <HeldConcert.stages.held_concert.description>Ils m'aimaient. Ils m'aimaient vraiment.</HeldConcert.stages.held_concert.description>
  
  <!-- EN: inspirational speech -->
  <InspirationalSpeech.stages.inspirational_speech.label>discours inspirant</InspirationalSpeech.stages.inspirational_speech.label>
